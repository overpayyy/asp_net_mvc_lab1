@model IEnumerable<aspNetMVC.Models.BlogArticleViewModel>

<div class="text-center">
    <h1 class="display-4">Blog Articles</h1>
</div>

<ul class="list-group mt-4">
    @foreach (var article in Model)
    {
        <li class="list-group-item">
            <a asp-action="Article" asp-route-id="@article.Id" class="text-decoration-none text-dark">
                <h5>@article.Title</h5>
            </a>
            <p class="mb-1 text-muted">@article.Description</p>
        </li>
    }
</ul>